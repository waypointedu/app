---
const { grade } = Astro.props as { grade: 'A' | 'B' | 'C' };
const messages = {
  A: 'A · Fully proofed and production ready',
  B: 'B · Lightly proofed',
  C: 'C · Minimal editorial review'
} as const;
---
<span class="inline-flex items-center gap-2 rounded-full bg-emerald-100 px-3 py-1 text-xs font-semibold text-emerald-800 dark:bg-emerald-900/70 dark:text-emerald-100">
  <svg class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l3.999-3.999z" clip-rule="evenodd"></path>
  </svg>
  <span>{messages[grade]}</span>
</span>
