---
import SearchBox from './SearchBox.astro';

const pathname = Astro.url.pathname;

const navItems = [
  { href: '/', label: 'Home' },
  { href: '/browse', label: 'Browse' },
  { href: '/search', label: 'Search' },
  { href: '/policies/collection', label: 'Policies' }
];
---
<header class="site-header" role="banner">
  <div class="mx-auto flex max-w-6xl items-center justify-between gap-6 px-6 py-4">
    <a href="/" class="text-xl font-semibold tracking-tight" style="color:var(--ink)">Waypoint Digital Library</a>
    <nav class="hidden items-center gap-1 text-sm font-medium md:flex" aria-label="Primary">
      {navItems.map((item) => (
        <a class="nav-link" href={item.href} aria-current={pathname === item.href ? 'page' : undefined}>
          {item.label}
        </a>
      ))}
    </nav>
    <div class="flex items-center gap-2">
      <SearchBox minimal={true} />
    </div>
  </div>
</header>
