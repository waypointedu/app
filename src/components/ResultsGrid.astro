---
import RecordCard from './RecordCard.astro';
const { results = [] } = Astro.props as { results?: any[] };
---
<div>
  {results.length === 0 ? (
    <p
      class="card text-center text-sm"
      style="border-style: dashed; border-color: var(--line); box-shadow: none"
    >
      No results found. Adjust filters or search terms.
    </p>
  ) : (
    <ul role="list" class="grid gap-8 sm:grid-cols-2 xl:grid-cols-3">
      {results.map((record) => (
        <li class="h-full">
          <RecordCard {...record} />
        </li>
      ))}
    </ul>
  )}
</div>
