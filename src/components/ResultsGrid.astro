---
import RecordCard from './RecordCard.astro';
const { results = [] } = Astro.props as { results?: any[] };
---
<div>
  {results.length === 0 ? (
    <p class="rounded-lg border border-dashed border-slate-300 bg-white/80 p-8 text-center text-sm text-slate-500">
      No results found. Adjust filters or search terms.
    </p>
  ) : (
    <ul role="list" class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {results.map((record) => (
        <li class="h-full">
          <RecordCard {...record} />
        </li>
      ))}
    </ul>
  )}
</div>
