---
const { items = [] } = Astro.props as { items?: { title: string; href: string }[] };
---
<nav class="toc space-y-2">
  <h2 class="text-sm font-semibold uppercase tracking-wide text-slate-400">Contents</h2>
  <ol class="space-y-1 text-sm">
    {items.map((item) => (
      <li>
        <a href={item.href} class="text-slate-600 hover:text-primary-600 dark:text-slate-200">{item.title}</a>
      </li>
    ))}
  </ol>
</nav>
