---
const {
  title,
  creators = [],
  year,
  subjects = [],
  collection,
  quality,
  coverUrl,
  permalink
} = Astro.props as Record<string, any>;
---
<a href={permalink} class="flex h-full flex-col rounded-xl border border-slate-200 bg-white p-5 shadow-sm transition hover:-translate-y-1 hover:shadow-md dark:border-slate-800 dark:bg-slate-900">
  <div class="aspect-[3/4] w-full overflow-hidden rounded-md bg-slate-100">
    {coverUrl ? <img src={coverUrl} alt={`Cover of ${title}`} class="h-full w-full object-cover" /> : null}
  </div>
  <div class="mt-4 space-y-2">
    <h3 class="text-lg font-semibold text-slate-900 dark:text-slate-100">{title}</h3>
    <p class="text-sm text-slate-500">{creators.join(', ')}</p>
    <p class="text-xs uppercase tracking-wide text-slate-400">{collection} Â· {year}</p>
    <div class="flex flex-wrap gap-2">
      {subjects.slice(0, 3).map((subject) => (
        <span class="rounded-full bg-slate-100 px-2 py-1 text-xs text-slate-500 dark:bg-slate-800 dark:text-slate-300">
          {subject}
        </span>
      ))}
    </div>
    {quality ? <span class="inline-flex items-center gap-1 text-xs font-semibold text-primary-600">Quality {quality}</span> : null}
  </div>
</a>
