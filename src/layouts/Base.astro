---
import '../styles/base.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import AnnouncementBar from '../components/AnnouncementBar.astro';
const { title = 'Waypoint Digital Library', description = 'Scholarly, open digital editions produced statically with Astro.' } = Astro.props as Record<string, string>;
---
<!DOCTYPE html>
<html lang="en" class="bg-slate-50 dark:bg-slate-950">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <slot name="head" />
  </head>
  <body class="min-h-screen flex flex-col">
    <AnnouncementBar />
    <Header />
    <main class="flex-1">
      <slot />
    </main>
    <Footer />
  </body>
</html>
