---
import '../styles/base.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import AnnouncementBar from '../components/AnnouncementBar.astro';
const { title = 'Waypoint Digital Library', description = 'Scholarly, open digital editions produced statically with Astro.' } = Astro.props as Record<string, string>;
---
<!DOCTYPE html>
<html lang="en" class="bg-slate-50 dark:bg-slate-950">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <slot name="head" />
  </head>
  <body class="min-h-screen flex flex-col">
    <a
      href="#main-content"
      class="skip-link absolute left-1/2 top-2 -translate-x-1/2 rounded-full bg-primary-600 px-4 py-2 text-sm font-semibold text-white shadow focus-visible:translate-y-0 focus-visible:opacity-100"
    >Skip to content</a>
    <AnnouncementBar />
    <Header />
    <main id="main-content" class="flex-1">
      <slot />
    </main>
    <Footer />
  </body>
</html>
