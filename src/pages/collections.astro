---
import Base from '../layouts/Base.astro';
import collections from '../data/collections.json';
---
<Base>
  <section class="mx-auto max-w-5xl px-6 py-12 space-y-8">
    <header class="space-y-2">
      <h1 class="text-3xl font-bold tracking-tight text-slate-900 dark:text-white">Collections</h1>
      <p class="text-slate-600 dark:text-slate-300">Curated sets of works organized by theme, format, and provenance.</p>
    </header>
    <div class="grid gap-6 md:grid-cols-2">
      {collections.map((collection) => (
        <a href={`/collection/${collection.slug}`} class="rounded-2xl border border-slate-200 bg-white/80 p-6 shadow-sm transition hover:-translate-y-1 hover:shadow-lg dark:border-slate-800 dark:bg-slate-900/80">
          <h2 class="text-xl font-semibold text-slate-800 dark:text-slate-100">{collection.title}</h2>
          <p class="mt-2 text-sm text-slate-600 dark:text-slate-300">{collection.description}</p>
        </a>
      ))}
    </div>
  </section>
</Base>
